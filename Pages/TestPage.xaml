<Page x:Class="SemestrControl.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      Title="TestPage">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Вопросы -->
                <TextBlock Text="{Binding Questions[0].Question}" FontSize="18" Margin="0,20,0,0"/>
                <RadioButton GroupName="Q1" Content="{Binding Questions[0].Answers[0]}"/>
                <RadioButton GroupName="Q1" Content="{Binding Questions[0].Answers[1]}"/>
                <RadioButton GroupName="Q1" Content="{Binding Questions[0].Answers[2]}"/>

                <!-- Аналогично для остальных вопросов -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
